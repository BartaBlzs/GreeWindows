<Window x:Class="GreeWindows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gree AC Controller" 
        Height="500" 
        Width="350"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#2ECC71"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#7F8C8D"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Toggle Style -->
        <Style x:Key="PowerToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Border" 
                                    Background="#BDC3C7" 
                                    CornerRadius="15"/>
                            <Ellipse x:Name="Thumb" 
                                     Width="24" 
                                     Height="24" 
                                     Fill="White"
                                     HorizontalAlignment="Left"
                                     Margin="3,0,0,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="8" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2ECC71"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mode Button Style -->
        <Style x:Key="ModeButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1"
                                    Height="6" 
                                    Background="#E0E0E0"
                                    CornerRadius="3"
                                    VerticalAlignment="Center"/>

                            <Track Grid.Row="1" 
                                   x:Name="PART_Track"
                                   VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Style>
                                            <Style TargetType="RepeatButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="RepeatButton">
                                                            <Border Background="{StaticResource SecondaryColor}" 
                                                                    Height="6" 
                                                                    CornerRadius="3,0,0,3"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </RepeatButton.Style>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Grid>
                                                                <Ellipse Width="22" 
                                                                        Height="22" 
                                                                        Fill="White"
                                                                        Stroke="{StaticResource SecondaryColor}"
                                                                        StrokeThickness="3"
                                                                        UseLayoutRounding="True"
                                                                        SnapsToDevicePixels="True">
                                                                    <Ellipse.Effect>
                                                                        <DropShadowEffect BlurRadius="4" 
                                                                                        ShadowDepth="1" 
                                                                                        Opacity="0.3"
                                                                                        RenderingBias="Quality"/>
                                                                    </Ellipse.Effect>
                                                                </Ellipse>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Style>
                                            <Style TargetType="RepeatButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="RepeatButton">
                                                            <Border Background="Transparent"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </RepeatButton.Style>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" 
                            ShadowDepth="0" 
                            Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryColor}">
                <Grid Margin="10,0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <ContentControl Content="{StaticResource TemperatureIcon}" 
                                      Width="24" 
                                      Height="24" 
                                      Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="AC Controller" 
                                     FontSize="18" 
                                     FontWeight="Bold" 
                                     Foreground="White"/>
                            <TextBlock x:Name="DeviceNameText"
                                     Text="No device" 
                                     FontSize="11" 
                                     Foreground="#BDC3C7"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button Style="{StaticResource IconButton}"
                                Click="Settings_Click"
                                Foreground="White"
                                Margin="0,0,5,0"
                                ToolTip="Settings">
                            <ContentControl Content="{StaticResource SettingsIcon}" 
                                          Width="18" 
                                          Height="18"/>
                        </Button>
                        <Button Style="{StaticResource IconButton}"
                                Click="Close_Click"
                                Foreground="White"
                                ToolTip="Close">
                            <ContentControl Content="{StaticResource CloseIcon}" 
                                          Width="18" 
                                          Height="18"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                          Background="{StaticResource CardBackground}" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <StackPanel x:Name="ControlsPanel" IsEnabled="False">

                    <!-- Power Card -->
                    <Border Background="{StaticResource CardBackground}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <ContentControl Content="{StaticResource PowerIcon}" 
                                              Width="24" 
                                              Height="24" 
                                              Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="Power" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock x:Name="PowerStatusText"
                                             Text="Off" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <ToggleButton x:Name="PowerToggle"
                                        Style="{StaticResource PowerToggle}"
                                        HorizontalAlignment="Right"
                                        Checked="PowerToggle_Checked"
                                        Unchecked="PowerToggle_Unchecked"/>
                        </Grid>
                    </Border>

                    <!-- Temperature Card -->
                    <Border Background="{StaticResource CardBackground}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <ContentControl Content="{StaticResource TemperatureIcon}" 
                                                  Width="20" 
                                                  Height="20" 
                                                  Margin="0,0,8,0"/>
                                    <TextBlock Text="Temperature" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TemperatureValueText"
                                         Text="24°C" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource SecondaryColor}"
                                         HorizontalAlignment="Right"/>
                            </Grid>

                            <Slider x:Name="TemperatureSlider"
                                  Style="{StaticResource ModernSlider}"
                                  Minimum="16" 
                                  Maximum="30" 
                                  Value="24"
                                  TickFrequency="1"
                                  IsSnapToTickEnabled="True"
                                  ValueChanged="TemperatureSlider_ValueChanged"
                                  PreviewMouseUp="TemperatureSlider_MouseUp"
                                  Margin="0,5,0,15"/>

                            <Grid>
                                <TextBlock Text="16°C" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="30°C" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextSecondary}"
                                         HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Mode Card -->
                    <Border Background="{StaticResource CardBackground}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <ContentControl Content="{StaticResource ModeIcon}" 
                                              Width="20" 
                                              Height="20" 
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="Mode" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <UniformGrid Rows="2" Columns="3" HorizontalAlignment="Stretch">
                                <RadioButton x:Name="ModeAuto" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Mode" 
                                           Tag="0" 
                                           Checked="Mode_Checked" 
                                           Margin="0,0,5,5">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource AutoIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,5,0"/>
                                        <TextBlock Text="Auto" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="ModeCool" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Mode" 
                                           Tag="1" 
                                           Checked="Mode_Checked" 
                                           Margin="0,0,5,5"
                                           IsChecked="True">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource CoolIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,5,0"/>
                                        <TextBlock Text="Cool" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="ModeHeat" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Mode" 
                                           Tag="4" 
                                           Checked="Mode_Checked" 
                                           Margin="0,0,0,5">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource HeatIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,5,0"/>
                                        <TextBlock Text="Heat" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="ModeDry" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Mode" 
                                           Tag="2" 
                                           Checked="Mode_Checked" 
                                           Margin="0,0,5,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource DryIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,5,0"/>
                                        <TextBlock Text="Dry" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="ModeFan" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Mode" 
                                           Tag="3" 
                                           Checked="Mode_Checked"
                                           Margin="0,0,5,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource FanIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,5,0"/>
                                        <TextBlock Text="Fan" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Fan Speed Card -->
                    <Border Background="{StaticResource CardBackground}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <ContentControl Content="{StaticResource FanIcon}" 
                                              Width="20" 
                                              Height="20" 
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="Fan Speed" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <UniformGrid Rows="1" Columns="4">
                                <RadioButton x:Name="FanAuto" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Fan" 
                                           Tag="0" 
                                           Checked="FanSpeed_Checked" 
                                           Margin="0,0,5,0"
                                           IsChecked="True">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource AutoIcon}" 
                                                      Width="14" 
                                                      Height="14" 
                                                      Margin="0,0,4,0"/>
                                        <TextBlock Text="Auto" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="FanLow" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Fan" 
                                           Tag="1" 
                                           Checked="FanSpeed_Checked" 
                                           Margin="0,0,5,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource FanSpeed1Icon}" 
                                                      Width="14" 
                                                      Height="14" 
                                                      Margin="0,0,4,0"/>
                                        <TextBlock Text="Low" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="FanMedium" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Fan" 
                                           Tag="2" 
                                           Checked="FanSpeed_Checked" 
                                           Margin="0,0,5,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource FanSpeed2Icon}" 
                                                      Width="14" 
                                                      Height="14" 
                                                      Margin="0,0,4,0"/>
                                        <TextBlock Text="Med" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="FanHigh" 
                                           Style="{StaticResource ModeButton}"
                                           GroupName="Fan" 
                                           Tag="3" 
                                           Checked="FanSpeed_Checked">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ContentControl Content="{StaticResource FanSpeed3Icon}" 
                                                      Width="14" 
                                                      Height="14" 
                                                      Margin="0,0,4,0"/>
                                        <TextBlock Text="High" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </RadioButton>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <Border Background="{StaticResource CardBackground}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,0,0,12"/>

                            <UniformGrid Rows="2" Columns="2">
                                <CheckBox x:Name="TurboCheckBox" 
                                        Margin="0,0,10,8"
                                        Checked="Option_Checked" 
                                        Unchecked="Option_Unchecked">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl Content="{StaticResource TurboIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,6,0"/>
                                        <TextBlock Text="Turbo" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </CheckBox>
                                <CheckBox x:Name="QuietCheckBox" 
                                        Margin="0,0,0,8"
                                        Checked="Option_Checked" 
                                        Unchecked="Option_Unchecked">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl Content="{StaticResource QuietIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,6,0"/>
                                        <TextBlock Text="Quiet" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </CheckBox>
                                <CheckBox x:Name="LightCheckBox" 
                                        Margin="0,0,10,0"
                                        Checked="Option_Checked" 
                                        Unchecked="Option_Unchecked">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl Content="{StaticResource LightIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,6,0"/>
                                        <TextBlock Text="Light" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </CheckBox>
                                <CheckBox x:Name="HealthCheckBox" 
                                        Checked="Option_Checked" 
                                        Unchecked="Option_Unchecked">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl Content="{StaticResource HealthIcon}" 
                                                      Width="16" 
                                                      Height="16" 
                                                      Margin="0,0,6,0"/>
                                        <TextBlock Text="Health" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </CheckBox>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Device Actions -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{StaticResource ModernButton}"
                                Click="Refresh_Click"
                                Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <ContentControl Content="{StaticResource RefreshIcon}" 
                                              Width="16" 
                                              Height="16" 
                                              Margin="0,0,6,0"/>
                                <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource AccentColor}"
                                Click="ChangeDevice_Click"
                                Margin="5,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <ContentControl Content="{StaticResource ChangeIcon}" 
                                              Width="16" 
                                              Height="16" 
                                              Margin="0,0,6,0"/>
                                <TextBlock Text="Change" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Grid.RowSpan="2"
                    Background="#80000000"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <ContentControl Content="{StaticResource LoadingIcon}" 
                                  Width="60" 
                                  Height="60" 
                                  Margin="0,0,0,15">
                        <ContentControl.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" CenterX="30" CenterY="30"/>
                        </ContentControl.RenderTransform>
                        <ContentControl.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="LoadingRotation"
                                            Storyboard.TargetProperty="Angle"
                                            From="0"
                                            To="360"
                                            Duration="0:0:2"
                                            RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ContentControl.Triggers>
                    </ContentControl>
                    <TextBlock x:Name="LoadingText"
                             Text="Loading..." 
                             FontSize="16" 
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>