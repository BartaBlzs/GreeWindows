<Window x:Class="GreeWindows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Settings" 
        Height="370" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3498DB"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            ShadowDepth="0" 
                            Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource PrimaryColor}"
                    CornerRadius="15,15,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource SettingsIcon}" 
                                      Width="20" 
                                      Height="20" 
                                      Margin="0,0,10,0"/>
                        <TextBlock Text="Network Settings" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Style="{StaticResource IconButton}"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            ToolTip="Close">
                        <ContentControl Content="{StaticResource CloseIcon}" 
                                      Width="14" 
                                      Height="14"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,10,0,0">
                    <TextBlock Text="Broadcast IP Address" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Foreground="{StaticResource PrimaryColor}"
                               Margin="0,0,0,8"/>
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8">
                        <TextBox x:Name="BroadcastIpTextBox" 
                                 Text="192.168.0.255"
                                 BorderThickness="0"
                                 Padding="12"
                                 FontSize="14"/>
                    </Border>
                    <TextBlock Text="Common: 192.168.0.255, 192.168.1.255, 10.0.0.255" 
                               Foreground="#7F8C8D" 
                               FontSize="11"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Border Grid.Row="1" 
                        Background="#FFF3CD"
                        BorderBrush="#FFC107"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl Content="{StaticResource InfoIcon}" 
                                      Width="20" 
                                      Height="20" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Top"/>
                        <TextBlock TextWrapping="Wrap"
                                   Width="280"
                                   FontSize="11"
                                   Foreground="#856404"
                                   VerticalAlignment="Center">
                            <Run Text="The broadcast IP is your network IP with .255 at the end. For example, if your router is at 192.168.0.1, use 192.168.0.255"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Grid Grid.Row="3" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Style="{StaticResource ModernButton}"
                            Click="SaveButton_Click"
                            IsDefault="True"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <ContentControl Content="{StaticResource SaveIcon}" 
                                          Width="16" 
                                          Height="16" 
                                          Margin="0,0,6,0"/>
                            <TextBlock Text="Save" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1"
                            Style="{StaticResource ModernButton}"
                            Background="#95A5A6"
                            Click="CancelButton_Click"
                            IsCancel="True"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <ContentControl Content="{StaticResource CancelIcon}" 
                                          Width="16" 
                                          Height="16" 
                                          Margin="0,0,6,0"/>
                            <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>